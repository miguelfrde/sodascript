function merge(left, right)
    result = []
    i = 0
    j = 0
    while result.length < left.length + right.length do
        if left[i] < right[i] do
            result.push(left[i])
            i += 1
        else
            result.push(right[j])
            j += 1
        end
        if i == left.length or j == right.length do
            result += []
            break
        end
    end
    return result
end

function mergesort(list)
    if list.length < 2 do
        return
    end

    mid = list.length / 2
    left = mergesort(list.slice(0, mid))
    left = mergesort(list.slice(mid, list.length))
    return merge(left, right)
end

